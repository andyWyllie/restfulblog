<% include ./partials/header %>
<div class="ui main text container">

    <div class="ui top piled segment">
            
        <h1 class="ui block header">
          Coffee Blog
        </h1>
        <div class="ui divided items" id="showContents">
            <% blogs.forEach(function(blog){ %>
            <h1 class="ui top attached header" id="showTitles"><%= blog.title %>
            </h1>
            <div class="ui image">
            <img class="ui medium image" src="<%= blog.image %>">
            <div class="ui black ribbon label">
            <span id="date" ><%= blog.created.toDateString() %></span>
            </div>    
            </div>
            <div class="ui raised compact segment">
            <p><%- blog.body.substring(0,50) + "..." %></p>
            <a href="/blogs/<%= blog._id %>">Read More</a>
            </div>
        </div>
    <% }); %>
        </div>
    </div>
    </div>

<% include ./partials/footer %>